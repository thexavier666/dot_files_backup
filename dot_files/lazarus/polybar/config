[colors]
    background      = #AF000000
    background-alt  = #0a6cf5
    foreground      = #dfdfdf
    foreground-alt  = #639fff
    primary         = #ffb52a
    secondary       = #e60053
    alert           = #bd2c40

[custom_scripts]
    cpu_temp        = /home/xavier666/Documents/scripts_dir/polybar/cpu_temp
    get_battery     = /home/xavier666/Documents/scripts_dir/polybar/get_battery

[size]
    bar_height      = 25
    bar_font        = 22
    bar_width       = 100%
    line_size       = 0
    line_color      = #0a6cf5
    bar_radius      = 0
    bar_border_size = 0

[style]
    bar_font_style  = "Cascadia Mono Pl:style=Regular:size=10;1"
    bar_icon_style  = "FontAwesome:style=Regular:size=10;1"

[bar/bar1]
    monitor         = ${env:MONITOR:eDP-1}
    width           = ${size.bar_width}
    height          = ${size.bar_height}
    radius          = ${size.bar_radius}
    fixed-center    = false
    bottom          = false

    background      = ${colors.background}
    foreground      = ${colors.foreground}

    line-size       = ${size.line_size}
    line-color      = #f00

    border-size     = ${size.bar_border_size}
    border-color    = #0000000

    padding-left    = 1
    padding-right   = 1

    module-margin-left  = 1
    module-margin-right = 1

    font-0          = ${style.bar_font_style}
    font-1          = ${style.bar_icon_style}

    modules-left    = bspwm i3 
    modules-center  = only_date only_time
    modules-right   = wlan_down wlan_up wlan eth_down eth_up eth backlight pulseaudio

    tray-position   = right
    tray-padding    = 0

    cursor-click    = pointer
    cursor-scroll   = ns-resize

[bar/bar2]
    monitor         = ${env:MONITOR:eDP-1}
    width           = ${size.bar_width}
    height          = ${size.bar_height}
    radius          = ${size.bar_radius}
    fixed-center    = false
    bottom          = true

    background      = ${colors.background}
    foreground      = ${colors.foreground}

    line-size       = ${size.line_size}
    line-color      = #f00

    border-size     = ${size.bar_border_size}
    border-color    = #00000000

    padding-left    = 1
    padding-right   = 1

    module-margin-left  = 1
    module-margin-right = 1

    font-0          = ${style.bar_font_style}
    font-1          = ${style.bar_icon_style}

    modules-right   = cpu memory disk battery temperature filesystem battery_charge 

    tray-position   = right
    tray-padding    = 0

    cursor-click    = pointer
    cursor-scroll   = ns-resize

[module/bspwm]
    type = internal/bspwm

    label-focused = %index%
    label-focused-background = ${colors.background-alt}
    label-focused-underline= ${colors.primary}
    label-focused-padding = 2

    label-occupied = %index%
    label-occupied-padding = 2

    label-urgent = %index%!
    label-urgent-background = ${colors.alert}
    label-urgent-padding = 2

    label-empty = %index%
    label-empty-foreground = ${colors.foreground-alt}
    label-empty-padding = 2

    ;Separator in between workspaces
    ;label-separator = |

[module/i3]
    type = internal/i3
    format = <label-state> <label-mode>
    index-sort = true
    wrapping-scroll = false

    ; Only show workspaces on the same output as the bar
    pin-workspaces = true

    label-mode-padding = 2
    label-mode-foreground = #000
    label-mode-background = ${colors.primary}

    ; focused = Active workspace on focused monitor
    label-focused = %index%
    label-focused-background = ${module/bspwm.label-focused-background}
    label-focused-underline = ${module/bspwm.label-focused-underline}
    label-focused-padding = ${module/bspwm.label-focused-padding}

    ; unfocused = Inactive workspace on any monitor
    label-unfocused = %index%
    label-unfocused-padding = ${module/bspwm.label-occupied-padding}

    ; visible = Active workspace on unfocused monitor
    label-visible = %index%
    label-visible-background = ${self.label-focused-background}
    label-visible-underline = ${self.label-focused-underline}
    label-visible-padding = ${self.label-focused-padding}

    ; urgent = Workspace with urgency hint set
    label-urgent = %index%
    label-urgent-background = ${module/bspwm.label-urgent-background}
    label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/cpu]
    type = internal/cpu
    interval = 2
    format-prefix = " "
    format-prefix-foreground = ${colors.foreground-alt}
    format-underline = ${size.line_color}
    label = %percentage:3:3%%

[module/memory]
    type = internal/memory
    interval = 2
    format-prefix = " "
    format-prefix-foreground = ${colors.foreground-alt}
    ;format-background = #ababab
    format-underline = ${size.line_color}
    label = %percentage_used:3:3%%

[module/filesystem]
    type = internal/fs
    interval = 25

    mount-0 = /
    format-prefix-foreground = ${colors.foreground-alt}
    format-underline = ${size.line_color}

    ;label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
    label-mounted = %{F#639fff}%{F-} %percentage_used%%
    label-unmounted = %mountpoint% not mounted
    label-unmounted-foreground = ${colors.foreground-alt}

[module/temperature]
    type = custom/script
    exec = ${custom_scripts.cpu_temp}
    tail = true
    interval = 5
    format-prefix = " "
    label = %output%°C

    format-prefix-foreground = ${colors.foreground-alt}

[module/wlan]
    type = internal/network
    interface = wlan0
    interval = 3.0

    format-connected-prefix = " "
    format-connected-prefix-foreground = ${colors.foreground-alt}
    format-connected = <ramp-signal> <label-connected>
    format-connected-underline = ${size.line_color}
    label-connected = %essid%

    format-disconnected =
    ;format-disconnected = <label-disconnected>
    ;format-disconnected-underline = ${self.format-connected-underline}
    ;label-disconnected = %ifname% disconnected
    ;label-disconnected-foreground = ${colors.foreground-alt}

    ramp-signal-0 = 
    ramp-signal-1 = 
    ramp-signal-2 = 
    ramp-signal-3 = 
    ramp-signal-4 = 
    ramp-signal-foreground = ${colors.foreground-alt}

[module/wlan_up]
    type = internal/network
    interface = wlan0
    interval = 1.0

    format-connected-prefix = " "
    format-connected-prefix-foreground = ${colors.foreground-alt}
    label-connected = %upspeed:8:8%

[module/wlan_down]
    type = internal/network
    interface = wlan0
    interval = 1.0

    format-connected-prefix = " "
    format-connected-prefix-foreground = ${colors.foreground-alt}
    label-connected = %downspeed:8:8%

[module/eth]
    type = internal/network
    interface = eth0
    interval = 5.0

    format-connected-underline = #55aa55
    format-connected-prefix = "  "
    label-connected = ""
    format-connected-prefix-foreground = ${colors.foreground-alt}

    format-disconnected-prefix = "  "
    format-disconnected-prefix-foreground = ${colors.foreground-alt}
    label-disconnected = ""
    label-disconnected-foreground = ${colors.foreground-alt}

[module/eth_up]
    type = internal/network
    interface = eth0
    interval = 1.0

    format-connected-underline = ${size.line_color}
    format-connected-prefix = " "
    format-connected-prefix-foreground = ${colors.foreground-alt}
    label-connected = %upspeed:8:8%

[module/eth_down]
    type = internal/network
    interface = eth0
    interval = 1.0

    format-connected-underline = ${size.line_color}
    format-connected-prefix = " "
    format-connected-prefix-foreground = ${colors.foreground-alt}
    label-connected = %downspeed:8:8%

[module/battery]
    type = internal/battery
    battery = BAT0
    adapter = AC0
    full-at = 98

    format-charging = <animation-charging> <label-charging>
    format-charging-underline = #0a6cf5
    format-charging-prefix = " "
    format-charging-prefix-foreground = ${colors.foreground-alt}

    format-discharging = <animation-discharging> <label-discharging>
    format-discharging-underline = ${self.format-charging-underline}
    format-discharging-prefix = " "
    format-discharging-prefix-foreground = ${colors.foreground-alt}

    format-full-prefix = " "
    format-full-prefix-foreground = ${colors.foreground-alt}
    format-full-underline = ${self.format-charging-underline}

    ramp-capacity-0 = 
    ramp-capacity-1 = 
    ramp-capacity-2 = 
    ramp-capacity-foreground = ${colors.foreground-alt}

    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-foreground = ${colors.foreground-alt}
    animation-charging-framerate = 750

    animation-discharging-0 = 
    animation-discharging-1 = 
    animation-discharging-2 = 
    animation-discharging-foreground = ${colors.foreground-alt}
    animation-discharging-framerate = 750

[module/battery_charge]
    type = custom/script
    exec = ${custom_scripts.get_battery}
    interval = 60

[module/only_date]
    type = internal/date
    interval = 60

    date = "%a %d %B, %Y"

    format-prefix = " " 
    format-prefix-foreground = ${colors.foreground-alt}
    label = %date:22:22%

[module/only_time]
    type = internal/date
    interval = 1

    time = %r
    
    format-prefix =  " "
    format-prefix-foreground = ${colors.foreground-alt}
    format-underline = ${size.line_color}
    label = %time:9:9%

[module/pulseaudio]
    type = internal/pulseaudio

    ;format-volume = <label-volume> <bar-volume>
    label-volume = %percentage:3:3%%
    format-volume =  <label-volume>
    format-underline = ${size.line_color}
    label-volume-foreground = ${root.foreground}

    format-volume-foreground = ${colors.foreground-alt}
    format-volume-underline = ${size.line_color}

    label-muted =  
    label-muted-foreground = #639fff

[module/backlight]
    type = internal/backlight

    card = intel_backlight

    ; Create scroll handlers used to set the backlight value
    ; Default: true
    enable-scroll = true

    format = <label>
    format-prefix = " "
    format-prefix-foreground = ${colors.foreground-alt}

    label = %percentage:3:3%%
